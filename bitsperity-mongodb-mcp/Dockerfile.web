FROM nginx:alpine

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Copy web files
COPY web/ /app/web/

# Create nginx user and set up directories
RUN adduser -D -u 1000 appuser && \
    mkdir -p /var/cache/nginx /var/run/nginx /var/log/nginx && \
    chown -R appuser:appuser /app/web /var/cache/nginx /var/run/nginx /var/log/nginx && \
    chmod -R 755 /var/cache/nginx /var/run/nginx /var/log/nginx

# Update nginx config to use custom pid location
RUN sed -i 's|/run/nginx.pid|/var/run/nginx/nginx.pid|g' /etc/nginx/nginx.conf

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"] 